
@model IEnumerable<BL.ViewModel.PaymentViewModel>

@{ ViewBag.Title = "Index"; }

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.cardNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PaymentDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.cardOwnerNAme)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.cardNumber)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.PaymentDate)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.cardOwnerNAme)
    </td>
    <td>
        @Html.ActionLink("Update", "UpdatePayment", new { id = item.ID }) |
        @Html.ActionLink("Details", "PaymentDetails", new { id = item.ID }) |
        @Html.ActionLink("Delete", "DeletePayment", new { id = item.ID })
    </td>
</tr>
}

</table>


