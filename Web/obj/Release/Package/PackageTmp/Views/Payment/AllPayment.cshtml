@model IEnumerable<BL.ViewModel.PaymentViewModel>

@{
    ViewBag.Title = "AllPayment";
}

<h2>AllPayment</h2>

<div class="d-flex flex-wrap">


    @foreach (var item in Model)
    {
        <div class="card m-2" style="width:20%;">
            <div class="card-body">
                <h5 class="card-title">@item.cardOwnerName</h5>
                <p class="card-text">@item.CardNumber</p>

                <a href="#" class="btn btn-primary">View Details</a>
            </div>
        </div>
    }
</div>



