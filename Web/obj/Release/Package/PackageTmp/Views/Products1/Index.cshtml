@model IEnumerable<BL.ViewModel.ProductViewModel>
<section id="portfolio" class="portfolio">
    <div class="container">

        <div class="section-title" data-aos="fade-left">
            <h2>Products</h2>
            <p>Choose the products you want now , make sure we have the best products.</p>
        </div>
        <div class="row" data-aos="fade-up" data-aos-delay="100">
            <div class="col-lg-12 d-flex justify-content-center">
                <ul id="portfolio-flters">
                    <li data-filter="*" class="filter-active">All</li>
                    <li data-filter=".filter-phone" id="phone">Smart Phones</li>
                    <li data-filter=".filter-labtop" id="labtop">Labtops</li>
                    <li data-filter=".filter-women" id="women">Women Fashion</li>
                    <li data-filter=".filter-Kids" id="kids">Kids Fashion</li>
                    <li data-filter=".filter-Men" id="men">Men Fashion</li>
                    <li data-filter=".filter-Skin" id="skin">Skin Care</li>
                </ul>
            </div>
        </div>

        <div class="row portfolio-container" data-aos="fade-up" data-aos-delay="200">
            @foreach (var item in Model)
            {
                if (item.CategoryID == 1)
                {
                    <div class="col-lg-4 col-md-6 portfolio-item filter-phone">
                        <div class="portfolio-wrap">
                            <img src="~/Content/img/portfolio/@item.Image" class="img-fluid" alt="">
                            <div class="portfolio-info">
                                <h4>@item.ProductName</h4>
                                <span style="font-weight:bold;color:white">@item.price</span>
                                <div class="portfolio-links">
                                    <a href="~/Content/img/portfolio/@item.Image" data-gallery="portfolioGallery" class="portfolio-lightbox" title="@item.ProductName"><i class="bx bx-link"></i></a>
                                    <a href="~/Cart/Index" class="js-cd-add-to-cart"><i class="bx bx-plus"></i></a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
                if (item.CategoryID == 2)
                {
                    <div class="col-lg-4 col-md-6 portfolio-item filter-labtop">
                        <div class="portfolio-wrap">
                            <img src="~/Content/img/portfolio/@item.Image" class="img-fluid" alt="">
                            <div class="portfolio-info">
                                <h4>@item.ProductName</h4>
                                <span style="font-weight:bold;color:white">@item.price</span>
                                <div class="portfolio-links">
                                    <a href="~/Content/img/portfolio/@item.Image" data-gallery="portfolioGallery" class="portfolio-lightbox" title="@item.ProductName"><i class="bx bx-link"></i></a>
                                    <a href="~/Cart/Index" id="addToCartBtn"
                                       class="js-cd-add-to-cart"><i class="bx bx-plus"></i></a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
                if (item.CategoryID == 3)
                {
                    <div class="col-lg-4 col-md-6 portfolio-item filter-women">
                        <div class="portfolio-wrap">
                            <img src="~/Content/img/portfolio/@item.Image" class="img-fluid" alt="">
                            <div class="portfolio-info">
                                <h4>@item.ProductName</h4>
                                <span style="font-weight:bold;color:white">@item.price</span>
                                <div class="portfolio-links">
                                    <a href="~/Content/img/portfolio/@item.Image" data-gallery="portfolioGallery" class="portfolio-lightbox" title="@item.ProductName"><i class="bx bx-link"></i></a>
                                    <a href="~/Cart/Index" class="js-cd-add-to-cart"><i class="bx bx-plus"></i></a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
                if (item.CategoryID == 4)
                {
                    <div class="col-lg-4 col-md-6 portfolio-item filter-Kids">
                        <div class="portfolio-wrap">
                            <img src="~/Content/img/portfolio/@item.Image" class="img-fluid" alt="">
                            <div class="portfolio-info">
                                <h4>@item.ProductName</h4>
                                <span style="font-weight:bold;color:white">@item.price</span>
                                <div class="portfolio-links">
                                    <a href="~/Content/img/portfolio/@item.Image" data-gallery="portfolioGallery" class="portfolio-lightbox" title="@item.ProductName"><i class="bx bx-link"></i></a>
                                    <a href="~/Cart/Index" class="js-cd-add-to-cart"><i class="bx bx-plus"></i></a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
                if (item.CategoryID == 5)
                {
                    <div class="col-lg-4 col-md-6 portfolio-item filter-Men">
                        <div class="portfolio-wrap">
                            <img src="~/Content/img/portfolio/@item.Image" class="img-fluid" alt="">
                            <div class="portfolio-info">
                                <h4>@item.ProductName</h4>
                                <span style="font-weight:bold;color:white">@item.price</span>
                                <div class="portfolio-links">
                                    <a href="~/Content/img/portfolio/@item.Image" data-gallery="portfolioGallery" class="portfolio-lightbox" title="@item.ProductName"><i class="bx bx-link"></i></a>
                                    <a href="~/Cart/Index" class="js-cd-add-to-cart"><i class="bx bx-plus"></i></a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
                if (item.CategoryID == 6)
                {
                    <div class="col-lg-4 col-md-6 portfolio-item filter-Skin">
                        <div class="portfolio-wrap">
                            <img src="~/Content/img/portfolio/@item.Image" class="img-fluid" alt="">
                            <div class="portfolio-info">
                                <h4>@item.ProductName</h4>
                                <span style="font-weight:bold;color:white">@item.price</span>
                                <div class="portfolio-links">
                                    <a href="~/Content/img/portfolio/@item.Image" data-gallery="portfolioGallery" class="portfolio-lightbox" title="@item.ProductName"><i class="bx bx-link"></i></a>
                                    <a href="~/Cart/Index" class="js-cd-add-to-cart"><i class="bx bx-plus"></i></a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</section>


